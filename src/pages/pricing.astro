    name: "Custom Project",
    price: "Custom",
    // UPDATED: Added keywords
    description: "Bespoke solutions for significant undertakings like course creation, complex content strategies, team workshops, or advanced podcast setup.",
    features: [
      "Tailored scope and deliverables.",
      "Dedicated project management.",
      "Ideal for complex or large-scale goals.",
      "Starts with a Discovery Call.",
      "Let's create something impactful."
    ],
    highlight: false
  }
];

// Website Tiers Data
const websiteTiers = [
  {
    id: 'website-onepage',
    name: "One-Page Website Design", // UPDATED: Added keywords
    price: "$1000", // Base price
    priceSuffix: "+ yearly domain fee", // Clarification
    // UPDATED: Added keywords
    description: "A professional single-page site perfect for landing pages, lead generation, or establishing your online presence. Simple website design solution.",
    features: [
      "Clean, modern design.",
      "Contact form integration.",
      "Basic SEO setup.",
      "Domain connection assistance.",
      "You cover the annual domain cost."
    ],
    highlight: false
  },
   {
    id: 'website-multipage',
    name: "Multi-Page Website Design", // UPDATED: Added keywords
    price: "$1500+", // Base price
    priceSuffix: "+ yearly domain fee", // Clarification
    // UPDATED: Added keywords
    description: "For businesses needing more than one page (e.g., About, Services, Blog). Price varies based on complexity. Full website design service.",
    features: [
      "No bulky plugins, no hosting fees.", // UPDATED
      "Multiple page design & build.",
      "Expanded content sections.",
      "Scalable for future growth.",
      "Great for Small Business/Membership Sites" // UPDATED
    ],
